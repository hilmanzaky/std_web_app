<%= form_for(@product_category, :html => { :class => 'form-horizontal', :multipart => true }) do |f| %>
  <fieldset>
    <legend>Tambah Kategori Barang</legend>

    <div class="control-group">
      <%= f.label 'Kategori Barang', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'textfield' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit 'Simpan', :class => 'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>
